<style>
  table {
    border-collapse: collapse;
    width: 100%;
    max-width: 800px;
    margin: auto;
    font-size: 16px;
    text-align: center;
  }

  th,
  td {
    border: 1px solid #ddd;
    padding: 8px;
  }

  th {
    background-color: #f2f2f2;
  }

  tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  tr:hover {
    background-color: #ddd;
  }

  @media screen and (max-width: 600px) {
    table {
      font-size: 14px;
    }
    th,
    td {
      padding: 4px;
    }
  }
</style>

<h2>Benchmark Report using #<%= @queried_through %></h2>
<h3>Fetched Users: <%= @users_count %></h3>

<table>
  <thead>
    <tr>
      <th></th>
      <th>User CPU Time</th>
      <th>System CPU Time</th>
      <th>Sum</th>
      <th>Elapsed Real Time</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>#<%= @queried_through %></th>
      <td><%= @benchmark_report.utime %></td>
      <td><%= @benchmark_report.stime %></td>
      <td><%= @benchmark_report.total %></td>
      <td><%= @benchmark_report.real %></td>
    </tr>
  </tbody>
</table>